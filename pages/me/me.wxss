
.page-me{
  padding: 0 40rpx;
}
.page-me .logo{
  width: 100%;
  height: 400rpx;
  text-align: center;
  margin: 50rpx 0;
}
.page-me .logo image{
  width: 400rpx;
  height: 400rpx;
}
.page-me .login-word{
  font-size: 35rpx;
