/* pages/songlist/songlist.wxss */

page {
    width: 100%;
    height: 100%;
    padding-top: 150rpx;
    display: block;
    overflow:hidden
}
/* 顶部要固定定位   标题要居中   自定义按钮和标题要和右边微信原生的胶囊上下对齐 */
.nav-wrap {
  position: absolute;
  width: 100%;
  top: 0;
  color: #000;
  z-index: 9999999;
}
.nav-wrap-1{
    position: absolute;
    width: 100%;
    top: 0;
    color: #000;
    z-index: 9999999;
    display: flex;
    align-items: flex-end;
}
.nav-wrap-1 van-icon{
    padding-bottom: 15rpx;
}
/* 标题要居中 */
.nav-title {
  position: absolute;
  text-align: center;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  font-size: 36rpx;
  color: #2c2b2b;
  font-weight: 600;
}

.nav-capsule {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  width: 140rpx;
  justify-content: space-between;
  height: 100%;
}

.navbar-v-line {
  width: 1px;
  height: 32rpx;
  background-color: #e5e5e5;
}

.back-pre, .back-home {
  width: 32rpx;
   height: 36rpx;
  margin-top: 4rpx;
  padding: 10rpx;
}
.nav-capsule .back-home {
  width: 36rpx;
  height: 40rpx;
  margin-top: 3rpx;
}
.wrapper{
    height: calc(100% - 150rpx);
}
.background_img {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    /* css3滤镜属性，blur设置高斯模糊  brightness设置变暗*/
    filter: blur(80px) opacity(20%);
    /* filter: blur(80px); */
    z-index: -1;
    /*和网易云音乐对比了一下，发现他们是也是放大1.5倍*/
    transform: scale(1.5);
}

.top {
    height: 380rpx;
    width: 100%;
}

.top-desc {
    width: 100%;
    height: 380rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.desc-img {
    width: 250rpx;
    height: 250rpx;
    border-radius: 20rpx;
    margin-right: 40rpx;
}
.desc-right{
    width: 410rpx;
    display: flex;
    flex-wrap: wrap;
  
}
.user-info{
    width: 100%;
    margin: 20rpx 0;
    display: flex;
    align-items: center;
}
.info-pic{
    width: 45rpx;
    height: 45rpx;
    border-radius: 50%;
    margin-right: 10rpx;
}
.user-nickname{
    color: rgb(49, 48, 48)
}
.desc-name{
    color: #222;
    font-size: 30rpx;
    font-weight: 500;
}
.desc-description{
    color:#a1a1a1;
    font-size: 26rpx;
    max-height: 68rpx;
    overflow: hidden;
}
.list {
    height: 100rpx;
    display: flex;
    justify-content: space-around;
    color: rgba(255, 255, 255, .7);
    margin-bottom: 20rpx;
}

.list-img {
    width: 40rpx;
    height: 40rpx;
}

.list-name {
    font-size: 25rpx;
}

.down {
    height: calc(100% - 380rpx);
    width: 100%;
    /* height: 100%; */
    padding: 30rpx 35rpx;
    border-top-left-radius: 30rpx;
    border-top-right-radius: 30rpx;
    overflow: hidden;
    box-sizing: border-box;
    position: relative;
    background-color: white;
}

.buttonBox {
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.buttonBox .play-icon{
    width: 80rpx;
    height: 50rpx;
    border-radius: 25rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background-image: linear-gradient(to right, #82d6fe, #1ca7ff);
}

.broadcast {
    width: 30rpx;
    height: 30rpx;
}

.collectBox image{
    width: 50rpx;
    height: 50rpx;
}


.broadcast-name {
    margin-left: 20rpx;
    margin-right: -10rpx;
}

.broadcast-desc {
    flex: 50%;
}

.broadcast-num {
    font-size: 24rpx;
    color: rgb(169, 169, 169);
}

.broadcast-pic {
    width: 50rpx;
    height: 50rpx;
}

.broadcast-img {
    width: 50rpx;
    height: 50rpx;
}
.songlistbox{
    /* padding-top: 25rpx; */
}
.song-list {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin: 40rpx 0;
}

.song-img {
    width: 80rpx;
    height: 80rpx;
}
.song-img image{
    width: 80rpx;
    height: 80rpx;
    border-radius: 15rpx;
}

.song {
    flex: 70%;
    padding-left: 20rpx;
}

.song-name {
    max-width: 500rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    padding-bottom: 10rpx;
}

.song-author {
    color: #978e8e;
    font-size: 22rpx;
    max-width: 500rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.broadcast-pic {
    padding-right: 15rpx;
}
/* 动画 */
.img-noAnimation {
    display: none;
    position: fixed;
  }
  
  .img-animation {
    display: block;
    border-radius: 50%!important;
  
  }
  .music-list-top{
      height: 280rpx;
      padding:50rpx 30rpx;
  }
  .music-list-skeleton{
      padding-top: 20rpx;
  }
  .music-list-top .van-skeleton__avatar--round{
      width: 250rpx!important;
      height: 250rpx!important;
      border-radius: 20rpx;
  }