/* pages/songlist/songlist.wxss */

.wrapper {
    width: 100%;
    height: 100%;
    display: block;
    /* overflow:hidden */
}

.background_img {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    /* css3滤镜属性，blur设置高斯模糊  brightness设置变暗*/
    filter: blur(50px) brightness(80%);
    /* filter: blur(80px); */
    z-index: -1;
    /*和网易云音乐对比了一下，发现他们是也是放大1.5倍*/
    transform: scale(1.5);
}

.top {
    width: 100%;
}

.top-desc {
    width: 100%;
    height: 380rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.desc-img {
    width: 250rpx;
    height: 250rpx;
    border-radius: 20rpx;
    margin-right: 40rpx;
}
.desc-right{
    width: 410rpx;
    display: flex;
    flex-wrap: wrap;
  
}
.user-info{
    width: 100%;
    margin: 20rpx 0;
    display: flex;
    align-items: center;
}
.info-pic{
    width: 45rpx;
    height: 45rpx;
    border-radius: 50%;
    margin-right: 10rpx;
}
.user-nickname{
    color: rgba(255,255,255,.8);
}
.desc-name{
    color: #ffffff;
    font-size: 30rpx;
    font-weight: 500;
}
.desc-description{
    color:rgba(255,255,255,.5);
    font-size: 26rpx;
    max-height: 68rpx;
    overflow: hidden;
}
.list {
    height: 100rpx;
    display: flex;
    justify-content: space-around;
    color: rgba(255, 255, 255, .7);
    margin-bottom: 20rpx;
}

.list-img {
    width: 40rpx;
    height: 40rpx;
}

.list-name {
    font-size: 25rpx;
}

.down {
    width: 100%;
    height: 100%;
    padding: 20rpx 35rpx;
    border-top-left-radius: 30rpx;
    border-top-right-radius: 30rpx;
    overflow: hidden;
    box-sizing: border-box;
    position: relative;
    background-color: white;
}

.buttonBox {
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.buttonBox .play-icon{
    width: 80rpx;
    height: 50rpx;
    border-radius: 25rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background-image: linear-gradient(to right, #82d6fe, #1ca7ff);
}

.broadcast {
    width: 30rpx;
    height: 30rpx;
}

.collectBox image{
    width: 50rpx;
    height: 50rpx;
}


.broadcast-name {
    margin-left: 20rpx;
    margin-right: -10rpx;
}

.broadcast-desc {
    flex: 50%;
}

.broadcast-num {
    font-size: 24rpx;
    color: rgb(169, 169, 169);
}

.broadcast-pic {
    width: 50rpx;
    height: 50rpx;
}

.broadcast-img {
    width: 50rpx;
    height: 50rpx;
}
.songlistbox{
    padding-top: 25rpx;
}
.song-list {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 30rpx;
}

.song-img {
    width: 65rpx;
    height: 65rpx;
}
.song-img image{
    width: 65rpx;
    height: 65rpx;
    border-radius: 15rpx;
}

.song {
    flex: 70%;
    padding-left: 20rpx;
}

.song-name {
    max-width: 500rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    padding-bottom: 10rpx;
}

.song-author {
    color: #978e8e;
    font-size: 22rpx;
    max-width: 500rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.broadcast-pic {
    padding-right: 15rpx;
}
/* 动画 */
.img-noAnimation {
    display: none;
    position: fixed;
  }
  
  .img-animation {
    display: block;
    border-radius: 50%!important;
  
  }
  .music-list-top{
      height: 280rpx;
      padding:50rpx 30rpx;
  }
  .music-list-skeleton{
      padding-top: 20rpx;
  }
  .music-list-top .van-skeleton__avatar--round{
      width: 250rpx!important;
      height: 250rpx!important;
      border-radius: 20rpx;
  }