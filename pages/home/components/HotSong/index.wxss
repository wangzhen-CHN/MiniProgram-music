  justify-content: space-between;
  margin-bottom: 24rpx;
}

.index-title-name {
  font-size: 40rpx;
  font-weight: 600;
}

.index-title-more {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #abb0bf;
}
.hot-song .van-skeleton {
  display: flex;
  justify-content: center;
  align-items: center;
}
