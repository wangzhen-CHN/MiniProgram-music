/**index.wxss**/
.index-container {
  height: 100%;
  background-color: #f4f5f7;
}

.page-nav {
  padding: 20rpx;
  height: 200rpx;
  background-color: #3341d5;
}

.nav {
  color: #888d93;
  display: flex;
  flex-direction: row;
}

.nav-input {
  width: 80%;
  display: flex;
  align-items: center;
}

.search-input {
  padding: 0 30rpx;
  background-color: #fff;
  height: 70rpx;
  width: 100%;
  border-radius: 40rpx;
}

.search-input-placeholder {
  color: #d2d2d2;
}

.nav-btn {
  width: 10%;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.nav-btn image {
  width: 60rpx;
  height: 60rpx;
}

.swiper-view {
  position: relative;
  margin-top: -140rpx;
  padding: 20rpx;
}

.swiper-view swiper {
  border-radius: 20px;
  overflow: hidden;

}

.swiper-item {
  width: 100%;
  height: 100%;
}

.swiper-item image {
  width: 100%;
  height: 100%;
}

.swiper-dots {
  width: 100%;
  height: 36rpx;
  display: flex;
  justify-content: center;
  flex-direction: row;
  position: absolute;
  bottom: 16rpx;
}

.swiper-dot {
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  margin-right: 26rpx;
  background-color: #ffffff50;
}

.swiper-dot-active {
  width: 54rpx;
  height: 18rpx;
  border-radius: 9rpx;
  background-color: #ffffffdd;
}

/*  */
.page-list {
  display: flex;
  flex-direction: row;
  padding: 0 20rpx;
}

.day-push {
  width: 30%;
  height: 315rpx;
  background-color: #fff;
  margin-right: 10rpx;
  border-radius: 20rpx;
  overflow: hidden;
  text-align: center;
}

.day-push image {
  height: 200rpx;
  width: 100%;
}

.day-push .day-push-title {
  margin-top: 10rpx;
  font-size: 28rpx;
}

.day-push .day-push-content {
  color: #aaa;
  font-size: 28rpx;
}

.option-list {
  width: 70%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
}

.list-item {
  width: 150rpx;
  height: 150rpx;
  background-color: #fff;
  margin-bottom: 15rpx;
  border-radius: 20rpx;
  text-align: center;
  font-size: 28rpx;
}

.list-item image {
  width: 60rpx;
  height: 60rpx;
  display: block;
  margin: 30rpx auto 0 auto;
}

.music-recommend {
  padding: 30rpx 20rpx;
}

.music-recommend-top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-bottom: 30rpx;

}

.music-recommend-title {
  font-size: 40rpx;
  font-weight: 600;
}

.music-recommend-more {
  font-size: 28rpx;
  color: #444;
}
.music-recommend-ul{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
}
.music-recommend-li{
  width: 30%;
  height: 315rpx;
  margin-right: 10rpx;
}
.music-recommend-li image{
  border-radius: 20rpx;
  height: 200rpx;
  width: 100%;
}
.music-recommend-name{
  font-size: 28rpx;
}