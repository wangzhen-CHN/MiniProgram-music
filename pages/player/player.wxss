.player-container{
  position: relative;

  height: calc(100% - 150rpx);
}
.play-stick{
  position: absolute;
  top: 48rpx;
  left: calc(50% - 48rpx);
  z-index: 999;
  transform: rotate3d(0, 0, 1, -25deg);
  transform-origin: 19px 19px;
  transition: 0.3s all;
}
.play-stick.active{
  transform: rotate3d(0, 0, 0, 0);
}
.play-stick image{
  width: 220rpx;
  height: 331rpx;
}
.play-player-name {
  width: 100%;
  text-align: center;
  color: #ccc;
  padding-top: 10rpx;
  font-size: 22rpx;
}
.player {
  width: 100%;
  margin-top: 180rpx;
}

.player-song-pic {
  position: relative;
  width: 580rpx;
  height: 580rpx;
  margin: 0 auto;
  border: 24rpx solid #11111115;
  border-radius: 100%;
  overflow: hidden;
  animation: turn 25s linear infinite;
}
.player-song-pic::before {
  position:absolute;
  width: 100%;
  height: 100%;
  content: "";
  border-radius: 100%;
  background-color: #222;
}
.player-song-animation-run{
  animation-play-state:running;
}
.player-song-animation-pause{
  animation-play-state:paused;
}

@keyframes turn {
  0% {
    -webkit-transform: rotate(0deg);
  }

  25% {
    -webkit-transform: rotate(90deg);
  }

  50% {
    -webkit-transform: rotate(180deg);
  }

  75% {
    -webkit-transform: rotate(270deg);
  }

  100% {
    -webkit-transform: rotate(360deg);
  }
}

.player-song-pic-min {
  position: absolute;
  width: 420rpx;
  height: 420rpx;
  left: calc(50% - 210rpx);
  top: calc(50% - 210rpx);
  overflow: hidden;
  border-radius: 100%;
}

.player-song-pic image {
  width: 100%;
  height: 100%;
}

.player-song-lyrics {
  position:relative;
  width: 100%;
  color: #e1e1e1;
  text-align: center;
  height: 240rpx;
  margin-top: 40rpx;
}
.player-song-lyrics-content {
  height: 150rpx;
  overflow: scroll;
}
.player-song-lyrics p {
  display: block;
  margin-top: 10rpx;
  letter-spacing: 3rpx;
  font-size: 28rpx;
  text-align: center;
}
.player-song-lyrics .shadow-top {
  position: absolute;
  height: 60rpx;
  width: 100%;
  top: 0;
  background-image: linear-gradient(0,rgba(255,255,255,0) 0%,#fff 100%);
}
.player-song-lyrics .shadow-bottom {
  position: absolute;
  height: 60rpx;
  width: 100%;
  bottom: 0;
  background-image: linear-gradient(-180deg,rgba(255,255,255,0) 0%,#fff 100%);
}
