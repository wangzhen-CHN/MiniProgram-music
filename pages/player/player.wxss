page {
  width: 100%;
  height: 100%;
  padding-top: 150rpx;
  display: block;
  overflow:hidden;
}
.background_img {
  position: fixed;
  top: 0;
  left: -20%;
  bottom: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  /*和网易云音乐对比了一下，发现他们是也是放大1.5倍*/
  transform: scale(1.1);
}
.background_img image{
  width: 150%;
  height: 100%;
  /* css3滤镜属性，blur设置高斯模糊  brightness设置变暗*/
  filter: blur(25px) brightness(0.27) opacity(0.8);
}
