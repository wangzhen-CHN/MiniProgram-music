
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 15rpx 0 20rpx 0;
  width: 100%;
  height: 100rpx;
  overflow: visible;
  background: white;
  display: flex;
  box-shadow: 0 40rpx 60rpx rgba(0, 0, 0, 0.9);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-item .cover-image {
  width: 50rpx;
  height: 50rpx;
}

.tab-bar-item:nth-child(3) .cover-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  margin-top: -80rpx;
  border: 10rpx solid #eee;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.3)
}

.tab-bar-item .cover-view {
  font-size: 12px;
}
