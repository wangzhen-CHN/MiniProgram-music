
.song-item {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin: 24rpx 0;
}

.song-item-img {
  display: flex;
  margin-right: 24rpx;
  justify-content: left;
  align-items: center;
}

.song-item-img image {
  border-radius: 20rpx;
  height: 96rpx;
  width: 96rpx;
}

.song-item-word {
  width: 70%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  letter-spacing: 1rpx;
  font-size: 28rpx;
  padding: 8rpx;
  color: #444;
}

.song-item-option {
  flex: 1;
  color: #abb0bf;
  display: flex;
  margin-right: 10rpx;
  justify-content: space-around;
}

.song-item-word .music-desc {
  color: #abb0bf;
  font-size: 24rpx;
  height: 26px;
  line-height: 26px;
  width: 85%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.music-tag {
  display: inline;
  font-size: 18rpx;
  margin-right: 6rpx;
  border: 1px solid #00af80;
  padding: 2rpx 4rpx;
  border-radius: 6rpx;
  color: #00af80;
}

.add-animation {
  animation: newframes .3s;
}
@keyframes newframes {
  0% {transform: scale(1);}
  50% {transform: scale(0.95);}
 100% {transform: scale(1);}
}
