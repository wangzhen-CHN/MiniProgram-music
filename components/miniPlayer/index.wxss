.mini-player {
  position: fixed;
  bottom: 100rpx;
  right: 100rpx;
  width: 100rpx;
  height: 100rpx;
}

.mini-player:before {
  content: '';
  width: 30rpx;
  height: 30rpx;
  background-color: #eee;
  position: absolute;
  left: 41rpx;
  top: 41rpx;
  z-index: 999;
  border-radius: 50%;
  
}

.mini-player .player-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  border: 6rpx solid #fff;
  box-shadow: 0px 0px 10px #444;
}

.player-animation {
  animation: turn 20s linear infinite;
}

@keyframes turn {
  0% {
    -webkit-transform: rotate(0deg);
  }

  25% {
    -webkit-transform: rotate(90deg);
  }

  50% {
    -webkit-transform: rotate(180deg);
  }

  75% {
    -webkit-transform: rotate(270deg);
  }

  100% {
    -webkit-transform: rotate(360deg);
  }
}